<div class="px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-slate-100 mb-1">Add Phone Number</h1>
    <p class="text-slate-400">Add a phone number to receive SMS notifications</p>
  </div>

  <%= form_with model: @phone_number, class: "space-y-6" do |form| %>
    <% if @phone_number.errors.any? %>
      <div class="bg-red-900/50 border border-red-700 rounded-xl p-4">
        <h3 class="font-medium text-red-200 mb-2">Please fix the following:</h3>
        <ul class="list-disc list-inside text-sm text-red-300 space-y-1">
          <% @phone_number.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "input-field", placeholder: "e.g., John Smith", autocomplete: "name" %>
    </div>

    <div>
      <%= form.label :number, "Phone Number", class: "label" %>
      <%= form.telephone_field :number, class: "input-field", placeholder: "+15551234567", autocomplete: "tel" %>
      <p class="mt-2 text-sm text-slate-400">Include country code (e.g., +1 for US)</p>
    </div>

    <div class="flex items-center gap-3">
      <%= form.check_box :active, class: "w-5 h-5 rounded bg-slate-700 border-slate-600 text-amber-500 focus:ring-amber-500" %>
      <%= form.label :active, "Active (receive notifications)", class: "text-slate-300" %>
    </div>

    <div class="flex gap-3 pt-4">
      <%= form.submit "Add Phone Number", class: "btn btn-primary flex-1" %>
      <%= link_to "Cancel", phone_numbers_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

