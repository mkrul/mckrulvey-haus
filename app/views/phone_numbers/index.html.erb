<div class="px-4 py-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-slate-100 mb-1">Phone Numbers</h1>
      <p class="text-slate-400">Manage notification recipients</p>
    </div>
    <%= link_to new_phone_number_path, class: "btn btn-primary" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
      Add
    <% end %>
  </div>

  <% if @phone_numbers.any? %>
    <div class="card">
      <% @phone_numbers.each do |phone| %>
        <div class="list-item">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-slate-700 flex items-center justify-center">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
            <div>
              <div class="font-medium text-slate-100"><%= phone.name %></div>
              <div class="text-sm text-slate-400"><%= phone.formatted_number %></div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <% if phone.active? %>
              <span class="badge badge-success">Active</span>
            <% else %>
              <span class="badge badge-warning">Inactive</span>
            <% end %>
            <%= button_to phone_number_path(phone), method: :delete, class: "p-2 text-slate-400 hover:text-red-400 hover:bg-red-900/20 rounded-lg transition-colors", data: { turbo_confirm: "Remove #{phone.name}'s number?" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card">
      <div class="card-body text-center py-12">
        <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
        </div>
        <h2 class="text-lg font-semibold text-slate-100 mb-2">No Phone Numbers</h2>
        <p class="text-slate-400 mb-6">Add phone numbers to receive task notifications via SMS.</p>
        <%= link_to "Add Phone Number", new_phone_number_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

