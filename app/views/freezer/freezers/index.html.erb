<div class="px-4 py-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-slate-100 mb-1">Freezers</h1>
      <p class="text-slate-400">Manage your freezer locations</p>
    </div>
    <%= link_to new_freezer_freezer_path, class: "btn btn-primary" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
      Add
    <% end %>
  </div>

  <% if @freezers.any? %>
    <div class="card">
      <% @freezers.each do |freezer| %>
        <div class="list-item">
          <div class="flex-1">
            <div class="font-medium text-slate-100"><%= freezer.name %></div>
            <div class="text-sm text-slate-400"><%= pluralize(freezer.freezer_items.count, "item") %></div>
          </div>
          <div class="flex items-center gap-2">
            <%= link_to edit_freezer_freezer_path(freezer), class: "p-2 text-slate-400 hover:text-amber-400 hover:bg-amber-900/20 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
            <% end %>
            <%= button_to freezer_freezer_path(freezer), method: :delete, class: "p-2 text-slate-400 hover:text-red-400 hover:bg-red-900/20 rounded-lg transition-colors", data: { turbo_confirm: "Delete this freezer? All items in this freezer will also be deleted." } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card">
      <div class="card-body text-center py-12">
        <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0v10l-8 4m8-14l-8 4m0 0L4 7m8 4v10M4 7v10l8 4"></path></svg>
        </div>
        <h2 class="text-lg font-semibold text-slate-100 mb-2">No Freezers</h2>
        <p class="text-slate-400 mb-6">Add your first freezer to start tracking inventory.</p>
        <%= link_to "Add Freezer", new_freezer_freezer_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
