<div class="px-4 py-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-slate-100 mb-1">Freezer Inventory</h1>
      <p class="text-slate-400">View and manage your frozen items</p>
    </div>
    <%= link_to new_freezer_item_path, class: "btn btn-primary" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
      Add
    <% end %>
  </div>

  <div class="mb-6">
    <%= form_with url: freezer_items_path, method: :get, class: "flex gap-2" do |form| %>
      <%= form.text_field :search, value: @search, placeholder: "Search items...", class: "input-field flex-1" %>
      <% if @search.present? %>
        <%= link_to freezer_items_path, class: "btn btn-secondary" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <% if @items_by_freezer.any? %>
    <% @items_by_freezer.each do |freezer, items| %>
      <div class="mb-6">
        <h2 class="section-title mb-3"><%= freezer.name %></h2>
        <div class="card">
          <% items.each do |item| %>
            <div class="list-item">
              <div class="flex-1">
                <div class="font-medium text-slate-100"><%= item.name %></div>
                <div class="text-sm text-slate-400">
                  <%= item.category %>
                  <% if item.weight_display.present? %>
                    <span class="mx-2">•</span>
                    <%= item.weight_display %>
                  <% end %>
                  <% if item.expiration_date.present? %>
                    <span class="mx-2">•</span>
                    <span class="<%= item.expiring_soon? ? 'text-red-400' : 'text-slate-400' %>">
                      Expires <%= item.expiration_date.strftime("%b %d, %Y") %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <%= link_to duplicate_freezer_item_path(item), class: "p-2 text-slate-400 hover:text-blue-400 hover:bg-blue-900/20 rounded-lg transition-colors", title: "Duplicate" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
                <% end %>
                <%= link_to edit_freezer_item_path(item), class: "p-2 text-slate-400 hover:text-amber-400 hover:bg-amber-900/20 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                <% end %>
                <%= button_to freezer_item_path(item), method: :delete, class: "p-2 text-slate-400 hover:text-red-400 hover:bg-red-900/20 rounded-lg transition-colors", data: { turbo_confirm: "Delete this item?" } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <div class="card-body text-center py-12">
        <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
        </div>
        <h2 class="text-lg font-semibold text-slate-100 mb-2">No Items</h2>
        <p class="text-slate-400 mb-6">
          <% if @search.present? %>
            No items found matching "<%= @search %>".
          <% else %>
            Add your first item to start tracking your freezer inventory.
          <% end %>
        </p>
        <%= link_to "Add Item", new_freezer_item_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
