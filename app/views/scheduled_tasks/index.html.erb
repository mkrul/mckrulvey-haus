<div class="px-4 py-6">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-slate-100 mb-1">Scheduled Tasks</h1>
      <p class="text-slate-400">Manage reminders and notifications</p>
    </div>
    <%= link_to new_scheduled_task_path, class: "btn btn-primary" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
      Add
    <% end %>
  </div>

  <% if @overdue_tasks.any? %>
    <div class="mb-6">
      <h2 class="section-title text-red-400">Overdue</h2>
      <div class="card">
        <% @overdue_tasks.each do |task| %>
          <div class="list-item">
            <div class="flex-1">
              <div class="font-medium text-slate-100"><%= task.title %></div>
              <div class="text-sm text-red-400">Due <%= time_ago_in_words(task.due_at) %> ago</div>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to edit_scheduled_task_path(task), class: "p-2 text-slate-400 hover:text-amber-400 hover:bg-amber-900/20 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
              <% end %>
              <%= button_to scheduled_task_path(task), method: :delete, class: "p-2 text-slate-400 hover:text-red-400 hover:bg-red-900/20 rounded-lg transition-colors", data: { turbo_confirm: "Delete this task?" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @upcoming_tasks.any? %>
    <div class="mb-6">
      <h2 class="section-title">Upcoming</h2>
      <div class="card">
        <% @upcoming_tasks.each do |task| %>
          <div class="list-item">
            <div class="flex-1">
              <div class="font-medium text-slate-100"><%= task.title %></div>
              <div class="text-sm text-slate-400">
                <%= task.due_at.strftime("%b %d at %l:%M %p") %>
                <% if task.recurrence.present? && task.recurrence != "none" %>
                  <span class="ml-2 badge badge-success"><%= task.recurrence.capitalize %></span>
                <% end %>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <%= link_to edit_scheduled_task_path(task), class: "p-2 text-slate-400 hover:text-amber-400 hover:bg-amber-900/20 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
              <% end %>
              <%= button_to scheduled_task_path(task), method: :delete, class: "p-2 text-slate-400 hover:text-red-400 hover:bg-red-900/20 rounded-lg transition-colors", data: { turbo_confirm: "Delete this task?" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @upcoming_tasks.empty? && @overdue_tasks.empty? %>
    <div class="card">
      <div class="card-body text-center py-12">
        <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
        </div>
        <h2 class="text-lg font-semibold text-slate-100 mb-2">No Scheduled Tasks</h2>
        <p class="text-slate-400 mb-6">Create tasks to get SMS reminders for feeding schedules, care routines, and more.</p>
        <%= link_to "Schedule a Task", new_scheduled_task_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

